<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_grad"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="rainbow_rider.kirin.spajam.MainActivity">

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Login"
android:id="@+id/main_login_button"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/main_detail_button" />

        <Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Post"
android:id="@+id/main_post_button"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/main_top_button" />

        <Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Detail"
android:id="@+id/main_detail_button"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/main_post_button" />

        <Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="TOPTOPTOP!"
android:id="@+id/main_top_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="150dp">

			<ImageView
    android:layout_width="203dp"
    android:layout_height="222dp"
    android:id="@+id/imageView2"
    android:src="@mipmap/titile_rogo"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_alignBottom="@+id/activity_main_imageView"
    android:layout_alignTop="@+id/activity_main_imageView"
    android:layout_weight="0.24"
    android:layout_row="0"
    android:layout_column="1" />

			<ImageView
android:id="@+id/activity_main_imageView"
android:layout_width="151dp"
android:layout_height="151dp"
android:src="@mipmap/house_rogo"
android:layout_gravity="right"
android:layout_centerVertical="true"
android:layout_alignParentEnd="true"
				android:layout_row="0"
				android:layout_column="2"
				android:layout_marginTop="20dp" />

		</GridLayout>

	</RelativeLayout>

</LinearLayout>
